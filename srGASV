#!/usr/local/bin/bash

#########################################
# Set parameters here
LMIN=100
LMAX=300
MIN_MAPQ=45
DELTA_WINDOW=0
MAX_ALIGNMENT_DIST=3
CHR_PREFIX=chr
OUTPUT_FORMAT=concise
#########################################

#########################################
#########################################
##       DO NOT MODIFY BELOW           ##
#########################################
#########################################


ARGNUM=$#
GASVOUT=$1
BAMFILE=$2
UNMAPPED_BAM=$3
FASTAFILE=$4
JARFILE=build/SplitReadGASV.jar

COMMAND="java -jar $JARFILE $GASVOUT $BAMFILE $UNMAPPED_BAM $FASTAFILE \
		$LMIN $LMAX $MIN_MAPQ $CHR_PREFIX $DELTA_WINDOW $OUTPUT_FORMAT \
		$MAX_ALIGNMENT_DIST"

if [ $ARGNUM != 4 ]; then
  echo "usage: srGASV <GASVclusters> <mapped.bam> <unmapped.bam> <reference.fasta>"
else
  $COMMAND
fi

